<% @activities.where({user_id: session[:user_id]}).each do |activity|%>
    
        <div class="col-md">
            <div class="card">
                <h4 class="card-title"> <%= activity[:title]%> </h4>
                <p class="card-text"><b>Child:</b> <%= activity[:child_id] %> </p>
                <p class="card-text"><b>Date:</b> <%= activity[:date] %> </p>
                <p class="card-text"><b>Time:</b> <%= activity[:time] %> </p>
                <%= link_to (image_tag activity.avatar.url(:sm)), activity_path(activity) %><br>
            </div>
            
        </div>
    
<% end %>