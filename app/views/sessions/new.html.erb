<div class="container center">
  <div class="row justify-content-center">
    <div class="col-md-8">
        
        <header>
            <h2 class="main-h2">Log In</h2>
        </header>

            <p class="red"><%= flash[:notice] %></p>

            <%= form_tag sessions_path do %>
            <div class="field">
                <%= label_tag :email %><br />
                <%= text_field_tag :email, params[:email], class: "form-control" %>
            </div>
            <div class="field">
                <%= label_tag :password %><br />
                <%= password_field_tag :password, nil, class:'form-control'  %>
            </div>
            <p>
                <div class="actions">
                <%= submit_tag "Log In", class: "btn btn-secondary btn-block" %>
                <%= link_to 'Back', root_path, class: "btn btn-light btn-block" %>
                </div>
            </p>
            <% end %>
        </div>
    </div>
</div>
