<% @assignments.where({user_id: session[:user_id]}).each do |assignment|%>
    
        <div class="col-md">
            <div class="card">
                <h4 class="card-title"> <%= assignment[:title]%> </h4>

                <% if (assignment[:child_id].blank? ) %>
                   <p class="card-text"><b>Child: </b>n/a</p>
                <% else %>
                    <p class="card-text"><b>Child: </b><%= Child.where(id: assignment[:child_id])[0].child_name%></p>
                <%end%>

                <% if (assignment[:due_date].blank? ) %>
                    <p class="card-text"><b>Due Date: </b>n/a</p>
                <% else %>
                    <p class="card-text"><b>Due Date:</b> <%= assignment[:due_date].strftime( '%m/%d/%Y' ) %> </p>
                <%end%>

                <%= link_to (image_tag assignment.avatar.url(:sm)), assignment_path(assignment) %>
            </div>
            
        </div>
    
<% end %>