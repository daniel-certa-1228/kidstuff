<div class="container center">
  <div class="row justify-content-center">
    <div class="col-md-8">
    <header>
      <h2 class="main-h2">Sign Up</h2>
    </header>

      <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages red">
            <h3>Form is invalid</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: "form-control" %>
        </div>
          <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :user_name %><br />
          <%= f.text_field :user_name, class: "form-control" %>
        </div>
        <p>
          <div class="actions">
          <%= f.submit "Sign Up", class: "btn btn-secondary btn-block" %>
          <%= link_to 'Back', root_path, class: "btn btn-light btn-block" %>
          </div>
        </p>
      <% end %>
    </div>
  </div>
</div>
