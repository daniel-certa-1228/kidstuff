<div class="container center">
  <div class="row justify-content-center">
    <div class="col-md-8">
        <header>
          <h2 class="main-h2">Activity</h2>
        </header>

        <div class="btn-group block" role="group" aria-label="...">
            <%= link_to "Back", activities_path, :class => "btn btn-dark ass-button" %>
            <%= link_to "Home", root_path, :class => "btn btn-outline-dark ass-button" %>
        </div>

        <p><b>Title:</b> <%= @activity.title %></p>
        <p><b>Child:</b> <%= @activity.child_id %></p>
        <p><b>Date:</b> <%= @activity.date%></p>
        <p><b>Time:</b> <%= @activity.time%></p>
        <%= image_tag @activity.avatar.url(:original), class: "img-fluid" %><br>

        <div class="btn-group block" role="group" aria-label="...">
            <%= link_to 'Edit Activity', edit_activity_path, :class => "btn btn-dark ass-button"  %>
           <!--  <%= link_to 'Delete Activity', activity_path(@activity), method: :delete, data: {confirm: 'Are you sure you want to delete this Activity?'} %> | --> 
            <%= link_to 'Email PDF', send_activity_path(@activity), :class => "btn btn-outline-dark ass-button"  %>
        </div>
    </div>
  </div>
</div>