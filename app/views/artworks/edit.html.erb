<div class="container center">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <header>
        <h2 class="main-h2">Edit Artwork</h2> 
      </header>    
      
      <div class="btn-group block" role="group" aria-label="...">
          <%= link_to "All Artwork", artworks_path, :class => "btn btn-dark ass-button" %>
          <%= link_to "Home", root_path, :class => "btn btn-outline-dark ass-button" %>
      </div>
      <%= flash[:notice] %>

      <%= form_for @artwork do |f| %>
        <% if @artwork.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% @artwork.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <b><%= f.label :title %>:</b><br />
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <br>

        <div class="field">
            <%= f.select(:child_id, include_blank: true) do %>
                <%= content_tag(:option, "Select a Child", value: "") %>
                <% Child.all.each do |c| -%>
                <%= content_tag(:option, c.child_name, value: c.id) %>
                <% end %>
            <% end %>
        </div>
        <p>
            <%= f.label :date %><br>
            <%= f.date_field :date, class: "form-control"  %>
        </p>

        <p>
          <div class="actions"><%= f.submit "Save", class: "btn btn-success btn-block" %></div>
          <%= link_to 'Delete Artwork', artwork_path(@artwork), method: :delete, data: {confirm: 'Are you sure you want to delete this Artwork?'}, class: "btn btn-danger btn-block delete-btn" %>

        </p>
        
      <% end %>
      
    </div>
  </div>
</div>